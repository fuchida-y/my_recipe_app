<header>
    <ul>
        <li><%= link_to 'My Recipe', root_path %></li>
        <% if user_signed_in? %>
            <li><%= current_user.email %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, 
                    method: :delete, "data-confirm" => "本当にログアウトしますか？", 
                    class: 'dropdown-item' %></li>
        <% else %>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
            <li><%= link_to 'ユーザー登録', new_user_registration_path %></li>            
        <% end %>
    </ul>
</header>

